});
</script>

<script src="/js/libs/bootstrap/transition.js"></script>
<script src="/js/libs/bootstrap/tab.js"></script>
<script src="/js/libs/bootstrap/tooltip.js"></script>
<script>
  var annotations = {
    'existing-html': [
      [ 'class.*"(list)"', 'Direct child elements of this container becomes list items' ],
      [ '(users)', 'Use this ID to define the list container' ],
      [ '(search)', 'This class automagically makes this input a search field.' ],
      [ 'class.*(sort)', 'This class automagically makes this element a sort buttons.' ],
      [ 'sort.*"(name)"', 'What value should this button sort based on?' ],
      [ 'class.*"(name)"', 'The content of this element becomes the value for this item\'s name-attribute' ],
      [ 'class.*"(born)"', 'The content of this element becomes the value for this item\'s born-attribute' ]
    ],
    'existing-js': [
      [ '(users)', 'ID of the list container'],
      [ '(valueNames)', 'Which value names does each item have?']
    ],
    'add-html': [
      [ '&lt;<span class="title">(li)</span>', 'This, the first element in the list, will be used as template for new items.']
    ],
    'add-js': [
      [ '(values)', 'These items will be added to the list on initialization.'],
      [ 'userList.(add)', 'It\'s possible to add items after list been initiated']
    ],
    'new-js': [
      [ '(item)', 'Since there are no elements in the list, this will be used as template.']
    ]
  };

  $(window).load(function() {
    setTimeout(function() {
      annotate(annotations);
      $('code').tooltip();
    }, 1000);
  })
</script>
