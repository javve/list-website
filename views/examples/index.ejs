<script src="/js/libs/bootstrap/tooltip.js"></script>
<script>
  hljs.initHighlightingOnLoad();

  var annotations = {
    'existing-html': [
      [ 'class.*"(list)"', 'Direct child elements of this container becomes list items' ],
      [ '(users)', 'Use this ID to define the list container' ],
      [ '(search)', 'This class automagically makes this input a search field.' ],
      [ 'class.*(sort)', 'This class automagically makes this element a sort buttons.' ],
      [ 'sort.*"(name)"', 'What value should this button sort based on?' ],
      [ 'class.*"(name)"', 'The content of this element becomes the value for this item\'s name-attribute' ]
    ]
  };

  $(window).load(function() {
    setTimeout(function() {
      annotate(annotations);
      $('code').tooltip();
    }, 1000);
  })
</script>